<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="maverick.gleao.wormsdestruction.MainActivity">
    android:indeterminateDrawable="@drawable/progressbar3" android:minHeight="48dp"

    <FrameLayout
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:id="@+id/Draw"
        android:layout_above="@+id/btnLeft"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView">

    </FrameLayout>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnZoomIn"
        android:background="@drawable/zoom_in"
        android:layout_below="@+id/textScoreBoard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/keyleft"
        android:id="@+id/btnLeft"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnJump"
        android:background="@drawable/keyup"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnRight"
        android:layout_toStartOf="@+id/btnRight" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnRight"
        android:background="@drawable/keyright"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Draw"
        android:layout_alignEnd="@+id/Draw" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textScoreBoard"
        android:layout_alignTop="@+id/Draw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/Draw"
        android:layout_toStartOf="@+id/Draw"
        android:textColor="#862119"
        android:textStyle="bold"
        android:background="@color/bright_foreground_material_dark" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnZoomOut"
        android:background="@drawable/zoom_out"
        android:layout_alignBottom="@+id/Draw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnZoomIn"
        android:layout_alignTop="@+id/btnZoomIn" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnCenterCamera"
        android:background="@drawable/worm_cam_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        android:id="@+id/timeBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:progress="50"
        android:progressDrawable="@drawable/progressbar2"
        android:indeterminate="false"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp" />

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/button2"
        android:background="@drawable/pimgpsh_fullsize_distr"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/Draw"
        android:layout_alignStart="@+id/Draw"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp" />

</RelativeLayout>
