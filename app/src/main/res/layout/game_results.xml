<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="maverick.gleao.wormsdestruction.MainActivity"
    android:id="@+id/game_results"
    android:background="@drawable/aliya06">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/results_coin_score"
        android:background="@color/bright_foreground_material_dark"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_alignBottom="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/results_time"
        android:background="@color/bright_foreground_material_dark"
        android:layout_alignBottom="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/results_score"
        android:background="@color/bright_foreground_material_dark"
        android:autoText="false"
        android:layout_marginBottom="76dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/results_coin_score"
        android:layout_alignStart="@+id/results_coin_score" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/results_highscore"
        android:background="@color/bright_foreground_material_dark"
        android:layout_alignTop="@+id/results_score"
        android:layout_alignLeft="@+id/results_time"
        android:layout_alignStart="@+id/results_time" />

    <Button
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mfaej" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button3"
        android:background="@drawable/indice"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button4"
        android:background="@drawable/timeremaingin"
        android:layout_alignBottom="@+id/results_coin_score"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button5"
        android:layout_alignBottom="@+id/results_score"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/score" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button6"
        android:layout_alignBottom="@+id/results_highscore"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:background="@drawable/high_score_mini_button" />
</RelativeLayout>
